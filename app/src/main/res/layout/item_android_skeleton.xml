<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="3dp"
        android:background="?attr/selectableItemBackground">

        <LinearLayout
            android:id="@+id/ll_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:orientation="vertical"
            android:paddingTop="12dp">


            <RelativeLayout
                android:id="@+id/ll_welfare_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">


                <View
                    android:id="@+id/tv_android_des"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="16dp"
                    android:layout_toLeftOf="@+id/iv_android_pic"
                    android:layout_weight="1"
                    android:background="@color/colorLine"
                    android:ellipsize="end"
                    android:lineSpacingExtra="4dp"
                    android:maxLines="5"
                    android:textSize="15sp" />

                <View
                    android:layout_width="190dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/tv_android_des"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="4dp"
                    android:background="@color/colorLine" />

                <View
                    android:id="@+id/iv_android_pic"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:background="@color/colorLine"
                    android:visibility="visible" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <View
                    android:id="@+id/tv_android_who"
                    android:layout_width="20dp"
                    android:layout_height="17dp"
                    android:background="@color/colorLine"
                    android:textColor="@color/colorSubtitle" />

                <TextView
                    android:id="@+id/tv_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/tv_android_who"
                    android:textColor="@color/colorSubtitle"
                    android:textSize="12sp"
                    tools:text=" Â· " />

                <View
                    android:id="@+id/tv_content_type"
                    android:layout_width="40dp"
                    android:layout_height="17dp"
                    android:layout_toEndOf="@+id/tv_point"
                    android:background="@color/colorLine"
                    android:textColor="@color/colorSubtitle"
                    tools:visibility="visible" />

                <View
                    android:id="@+id/tv_android_time"
                    android:layout_width="90dp"
                    android:layout_height="17dp"
                    android:layout_alignParentEnd="true"
                    android:background="@color/colorLine"
                    tools:visibility="visible" />

            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>
