<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <variable
            name="personBean"
            type="com.example.jingbin.cloudreader.bean.FilmDetailBean.ActorsBean" />
    </data>

    <!--android:background="@drawable/ripple_one_item_bg"-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:imageWidthDp="@{70}"
            android:imageHeightDp="@{100}"
            android:imageUrl='@{personBean.img}'
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/iv_avatar"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{personBean.name}"
                android:textColor="@color/colorTitle"
                android:textSize="14sp"
                tools:text="小罗伯特·唐尼" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:lines="2"
                android:text="@{personBean.roleName}"
                android:textColor="@color/colorSubtitle"
                android:textSize="12sp"
                tools:text="托尼·斯塔克 / 钢铁侠" />
        </LinearLayout>

    </RelativeLayout>
</layout>
